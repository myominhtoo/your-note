@*
    Register view of User
*@

@model RegisterRequestViewModel

@{
    ViewData["title"] = "App | Register";
}


<div class="container row mx-auto d-flex justify-content-center align-items-center" style="height:100vh;max-height:100vh;">
    <div id="form-container" class="col-10 col-lg-4 card p-4">
        <header>
            <h3 class="h3 text-center">Register Account</h3>
        </header>
        <form asp-controler="User" method="post" asp-action="Register" class="form w-100 my-2">
            <div class="form-group my-2 w-100">
                <label asp-for="Username"></label>
                <input type="text"asp-for="Username" class="form-control w-100" placeholder="Enter username " />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group my-2 w-100">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control w-100" placeholder="Enter email address " />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group my-2 w-100">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control w-100" placeholder="Enter password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group mt-1 w-100">
                <button type="submit" class="btn btn-primary w-100 mb-2">Register</button>
                <div class="w-100 text-center">
                    <a style="cursor:pointer;" asp-controller="User" asp-action="Login" class="link link-danger text-decoration-underline">
                        Already had account?
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>