@*
    Login view of User 
*@

@model LoginRequestViewModel

@{
    ViewData["title"] = "App | Login";
}

<div class="container row mx-auto d-flex justify-content-center align-items-center" style="height:100vh;max-height:100vh;">
    @if (TempData["message"] != null)
    {
        <h3 class="text-center text-success">@TempData["message"]</h3>
    }
    <div id="form-container" class="col-10 col-lg-4 card p-4" >
        <header>
            <h3 class="h3 text-center">Login Account</h3>
        </header>
        <form asp-controller="User" asp-action="Login" method="post" class="form w-100 my-2"> 
            <div class="form-group my-2 w-100">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control w-100" placeholder="Enter email address " />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group my-2 w-100">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control w-100" placeholder="Enter password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group mt-1 w-100">
                <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
                <div class="w-100 text-center">
                    <a asp-controler="User" asp-action="Register"  style="cursor:pointer;" class="link cursor-pointer link-danger text-decoration-underline">Create account?</a>
                </div>
            </div>
        </form>
    </div>
</div>